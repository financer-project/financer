{
    "name": "financer",
    "version": "0.1.0",
    "scripts": {
        "dev": "blitz dev",
        "build": "dotenv -e .env.production yarn db:generate && blitz build",
        "build:docker:latest": "docker build -t financer:latest .",
        "start": "blitz start",
        "studio": "blitz prisma studio",
        "lint": "eslint .",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest",
        "db:generate": "blitz prisma generate",
        "db:test:start": "docker compose -f docker/docker-compose.test.yml up -d",
        "db:test:stop": "docker compose -f docker/docker-compose.test.yml down",
        "db:test:wait": "docker compose -f docker/docker-compose.test.yml exec -T mysql /bin/bash -c \"until mysqladmin ping -hlocalhost -ufinancer-test -ppassword --silent; do echo waiting...; sleep 2; done;\"",
        "db:migrate:deploy": "blitz prisma migrate deploy",
        "db:push": "blitz prisma db push",
        "db:push:test": "dotenv -e .env.test blitz prisma db push --force-reset",
        "test:start:app": "yarn db:test:start && yarn db:test:wait && yarn db:push:test && dotenv -e .env.test blitz start",
        "test:start:app:dev": "yarn db:test:start && yarn db:push:test && dotenv -e .env.test blitz dev",
        "test:e2e": "dotenv -e .env.test start-server-and-test test:start:app http://localhost:3000 cypress:e2e",
        "test:e2e:headed": "dotenv -e .env.test start-server-and-test test:start:app http://localhost:3000 cypress:e2e:headed",
        "test:e2e:open": "dotenv -e .env.test start-server-and-test test:start:app:dev http://localhost:3000 cypress:e2e:open",
        "cypress:e2e": "cypress run --e2e --browser chrome --headless",
        "cypress:e2e:headed": "cypress run --e2e --browser chrome",
        "cypress:e2e:open": "cypress open --e2e"
    },
    "prisma": {
        "schema": "src/lib/db/schema/"
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@blitzjs/auth": "^2.2.1",
        "@blitzjs/next": "^2.2.1",
        "@blitzjs/rpc": "^2.2.1",
        "@prisma/client": "^6.3.1",
        "@radix-ui/react-alert-dialog": "^1.1.5",
        "@radix-ui/react-avatar": "^1.1.2",
        "@radix-ui/react-dialog": "^1.1.5",
        "@radix-ui/react-dropdown-menu": "^2.1.5",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-popover": "^1.1.5",
        "@radix-ui/react-scroll-area": "^1.2.2",
        "@radix-ui/react-select": "^2.1.5",
        "@radix-ui/react-separator": "^1.1.1",
        "@radix-ui/react-slot": "1.1.1",
        "@radix-ui/react-toast": "1.2.5",
        "@radix-ui/react-tooltip": "^1.1.7",
        "@tailwindcss/postcss": "4.0.1",
        "autoprefixer": "10.4.20",
        "blitz": "^2.2.1",
        "class-variance-authority": "0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "1.0.0",
        "currency-codes": "2.2.0",
        "formik": "^2.4.6",
        "lucide-react": "0.475.0",
        "luxon": "3.5.0",
        "next": "^15.1.7",
        "postcss": "^8.5.1",
        "prisma": "6.3.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "recharts": "^2.15.1",
        "secure-password": "^4.0.0",
        "tailwind-merge": "^3.0.1",
        "tailwindcss": "^4.0.1",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.24.1",
        "zod-formik-adapter": "1.3.0"
    },
    "devDependencies": {
        "@next/env": "^15.1.6",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@types/luxon": "3.4.2",
        "@types/node": "^22.12.0",
        "@types/preview-email": "^3.1.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "19.0.3",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@vitejs/plugin-react": "^4.3.4",
        "ajv": "^8.17.1",
        "cypress": "14.0.3",
        "dotenv-cli": "8.0.0",
        "eslint": "^9.19.0",
        "eslint-config-next": "^15.1.6",
        "eslint-config-prettier": "^10.0.1",
        "jsdom": "^26.0.0",
        "lint-staged": "^15.4.3",
        "preview-email": "^3.1.0",
        "start-server-and-test": "2.0.10",
        "typescript": "^5.7.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.4",
        "vitest-mock-extended": "2.0.2"
    }
}
